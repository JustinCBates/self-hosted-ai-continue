# Environment Configuration
DEBUG=True
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1

# Model Configuration
DEFAULT_MODEL_NAME=microsoft/DialoGPT-medium
MODEL_CACHE_DIR=./models
MAX_TOKENS=2048
TEMPERATURE=0.7
TOP_P=0.9

# Server Configuration
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=300
ENABLE_CORS=True

# Authentication (optional)
API_KEY=your-api-key-here
ENABLE_AUTH=False

# Monitoring
ENABLE_METRICS=True
METRICS_PORT=9090

# GPU Configuration
USE_GPU=False
GPU_MEMORY_FRACTION=0.8